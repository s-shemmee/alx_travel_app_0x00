# Django Environment Variables Template
# Copy this file to .env and update with your actual values

# Django Secret Key - Generate a new one for production!
SECRET_KEY=your-secret-key-here

# Debug mode (set to False in production)
DEBUG=True

# Database settings (currently using SQLite for development)
# Uncomment these when you switch to MySQL/PostgreSQL
# DB_NAME=your_database_name
# DB_USER=your_database_user
# DB_PASSWORD=your_secure_password
# DB_HOST=localhost
# DB_PORT=3306

# Allowed hosts for deployment (comma-separated)
ALLOWED_HOSTS=127.0.0.1,localhost

# Email settings (for future use)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password

# Social Authentication (for future use)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Keys (for future use)
# STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
